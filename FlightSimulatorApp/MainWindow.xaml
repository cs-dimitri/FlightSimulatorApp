<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <Viewbox Margin="635,326,0,28.667">
            <local:Joystick x:Name="j1" HorizontalAlignment="Left" Height="444" Margin="0,100,0,0"
                        VerticalAlignment="Top" Width="393" Loaded="Joystick_Loaded_3" MouseLeftButtonUp="j1_MouseLeftButtonUp"/>
        </Viewbox>
        <StackPanel HorizontalAlignment="Left" Height="76" Margin="621,298,0,0" VerticalAlignment="Top" Width="212">
            <Slider x:Name="s1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="212"
                    Minimum="0" Maximum="1" TickFrequency="0.135" TickPlacement="BottomRight" Margin="0,10"
                    ValueChanged="Slider_ValueChanged" Foreground="Black" BorderBrush="Red" OpacityMask="#FFBB3F3F">

                <Slider.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF84F2D0"/>
                    </LinearGradientBrush>
                </Slider.Background>
            </Slider>
        </StackPanel>
        <TextBox x:Name="t1" HorizontalAlignment="Left" Height="66" Margin="672,180,0,0" TextWrapping="Wrap"
                 Text="Current val: 0" VerticalAlignment="Top" Width="103"/>
        <StackPanel HorizontalAlignment="Left" Height="76" Margin="498,421,0,0" VerticalAlignment="Top" Width="212" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-89.918"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Slider x:Name="s2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="212"
                Minimum="0" Maximum="1" TickFrequency="0.135" TickPlacement="BottomRight" Margin="0,10"
                ValueChanged="s2_ValueChanged" Foreground="Black" BorderBrush="Red" OpacityMask="#FFBB3F3F">

                <Slider.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF84F2D0"/>
                    </LinearGradientBrush>
                </Slider.Background>
            </Slider>
        </StackPanel>
        <TextBox x:Name="t1_Copy" HorizontalAlignment="Left" Height="66" Margin="525,180,0,0" TextWrapping="Wrap"
            Text="Current val: 0" VerticalAlignment="Top" Width="103"/>

    </Grid>
</Window>
